Data:
Pos_Risk := read EXIST {TB_Risk_Positive from CHICA} Where it Occurred Within Past 1 Year;
Neg_Risk := read EXIST /*(Direct_Contact)*/ {TB_Risk_Negative from CHICA} Where it Occurred Within Past 1 Year;
PPD := read Exist {PPD_Result from CHICA} Where it Occurred Within Past 1 Year;
;;

Priority:	256;;
	Evoke:	;;
	
	
Logic:
If (Pos_Risk = True) then conclude False;
If (Neg_Risk = True) then conclude False;
If (PPD = True) then conclude False;
conclude True;
;;
Action:
write ("Has || firstname || been exposed to anyone with tuberculosis (TB) disease?");
