<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs">

	<class name="Role" table="role">

		<id name="role" type="java.lang.String" column="role">
			<generator class="assigned" />
		</id>

		<property name="description" type="java.lang.String"
			column="description" not-null="true" length="255" />

		<!-- Associations -->

		<!-- bi-directional many-to-many association to Privilege -->
		<set name="rolePrivileges" lazy="true" cascade="none"
			table="role_privilege">
			<key>
				<column name="role" />
			</key>
			<many-to-many class="Privilege">
				<column name="privilege" />
			</many-to-many>
		</set>
		<!-- bi-directional many-to-many association to User -->
		<set name="users" lazy="true" cascade="none"
			table="user_role">
			<key>
				<column name="role" />
			</key>
			<many-to-many class="User">
				<column name="user_id" />
			</many-to-many>
		</set>

	</class>
</hibernate-mapping>
