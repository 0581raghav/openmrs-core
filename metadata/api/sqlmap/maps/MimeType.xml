<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap
	PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN"
	"http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="org.openmrs.MimeType">
 
<!-- ************************************************************ -->
<!-- ** Creation                                               ** -->
<!-- ************************************************************ -->

<insert id="createMimeType" parameterClass="org.openmrs.MimeType">
	INSERT INTO mime_type
		(
		mime_type,
		description
		)
	VALUES
		(
		#mimeType#,
		#description#
		);
</insert>

<!-- ************************************************************ -->
<!-- ** Read                                                   ** -->
<!-- ************************************************************ -->

<resultMap id="mimeTypeResult" class="org.openmrs.MimeType">
	<result property="mime_type" column="mimeType" />
	<result property="description" column="description"/>
</resultMap>

<select id="getMimeType" parameterClass="string" resultMap="mimeTypeResult">
	SELECT * FROM mime_type WHERE mime_type = #value#
</select>

<!-- ************************************************************ -->
<!-- ** Update                                                 ** -->
<!-- ************************************************************ -->

<update id="updateMimeType" parameterClass="org.openmrs.MimeType">
	UPDATE
		mime_type
	SET
		description = #description#,
	WHERE
		mime_type = #mimeType#
</update>

<!-- ************************************************************ -->
<!-- ** Delete                                                 ** -->
<!-- ************************************************************ -->

<delete id="deleteMimeType" parameterClass="string">
	DELETE FROM mime_type WHERE mime_type = #value#
</delete>

</sqlMap>