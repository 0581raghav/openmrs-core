<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs">

	<class name="MimeType" table="mime_type">

		<id name="mimeType" type="java.lang.String"
			column="mime_type">
			<generator class="assigned" />
		</id>

		<property name="description" type="java.lang.String"
			column="description" length="1024" />

		<!-- Associations -->

		<!-- bi-directional one-to-many association to ComplexObs -->
		<set name="complexObs" lazy="true" inverse="true"
			cascade="none">
			<key column="mime_type" />
			<one-to-many class="ComplexObs" />
		</set>

	</class>
	
</hibernate-mapping>
