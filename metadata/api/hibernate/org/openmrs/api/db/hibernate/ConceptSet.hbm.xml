<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs">

	<class name="ConceptSet" table="concept_set">

		<composite-id>
			<key-many-to-one name="concept" column="concept_id"
				class="Concept" />
			<key-many-to-one name="set" column="concept_set"
				class="Concept" />
		</composite-id>

		<property name="sortWeight" type="java.lang.Double"
			column="sort_weight" length="22" />
		<property name="dateCreated" type="java.util.Date"
			column="date_created" length="19" />

		<!-- Associations -->
		<!-- derived association(s) for compound key -->
		<!-- bi-directional many-to-one association to Concept -->
		<many-to-one name="concept" class="Concept"
			update="false" insert="false">
			<column name="concept_id" />
		</many-to-one>

		<!-- bi-directional many-to-one association to Concept -->
		<many-to-one name="set" class="Concept"
			update="false" insert="false">
			<column name="concept_set" />
		</many-to-one>

		<!-- end of derived association(s) -->

		<!-- bi-directional many-to-one association to User -->
		<many-to-one name="creator" class="User" not-null="true">
			<column name="creator" />
		</many-to-one>

	</class>
</hibernate-mapping>
