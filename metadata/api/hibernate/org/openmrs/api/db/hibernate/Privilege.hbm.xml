<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs">

	<class name="Privilege" table="privilege">

		<id name="privilege" type="java.lang.String"
			column="privilege" length="250">
			<generator class="assigned" />
		</id>

		<discriminator column="privilege" insert="false" />

		<property name="uuid" type="java.lang.String"
			column="uuid" length="38" unique="true" />

		<property name="localizedDescription" column="description"
			type="org.openmrs.api.db.hibernate.LocalizedStringType" not-null="true" length="65536" />

	</class>
</hibernate-mapping>
