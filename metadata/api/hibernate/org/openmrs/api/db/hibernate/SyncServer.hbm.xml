<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.synchronization.server">

	<class name="RemoteServer" table="synchronization_server">

		<id name="serverId" type="int" column="server_id">
			<generator class="native" />
		</id>

		<property name="nickname" type="java.lang.String"
			column="nickname" length="255" />

		<property name="address" type="java.lang.String"
			column="address" length="255" not-null="true" />

		<property name="serverType" column="server_type">
	      <type name="org.openmrs.api.db.hibernate.usertype.GenericEnumUserType">
	        <param name="enumClassName">org.openmrs.synchronization.server.RemoteServerType</param>
	      </type>
	    </property>

		<property name="guid" type="java.lang.String"
			column="guid" length="36" />

		<property name="username" type="java.lang.String"
			column="username" length="255" />

		<property name="password" type="java.lang.String"
			column="password" length="255" />

		<property name="lastSync" type="java.util.Date"
			column="last_sync" length="19" />

		<property name="lastSyncState" column="last_sync_state">
			<type name="org.openmrs.api.db.hibernate.usertype.GenericEnumUserType">
				<param name="enumClassName">org.openmrs.synchronization.SyncTransmissionState</param>
			</type>
		</property>

		<set name="serverClasses" lazy="true" inverse="true" cascade="all-delete-orphan">
			<key>
				<column name="server_id" />
			</key>
			<one-to-many class="org.openmrs.synchronization.filter.SyncServerClass" />
		</set>

		<set name="serverRecords" lazy="true" inverse="true" cascade="all-delete-orphan">
			<key>
				<column name="server_id" />
			</key>
			<one-to-many class="org.openmrs.synchronization.server.SyncServerRecord" />
		</set>

	    <property name="disabled" type="java.lang.Boolean" column="disabled"
	        length="1" not-null="true" />

		<property name="childUsername" type="java.lang.String"
			column="child_username" length="255" />

	</class>
</hibernate-mapping>
