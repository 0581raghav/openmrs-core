<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs">

	<class name="GlobalPropertyType" table="global_property_type">

		<id name="globalPropertyTypeId" type="java.lang.Integer" column="global_property_type_id" length="65535">
			<generator class="native" />
		</id>

		<discriminator column="globalPropertyTypeId" insert="false" />
		
		<property name="name" type="java.lang.String" column="name"/>

		<property name="description" type="java.lang.String" column="description"/>

	</class>
	
</hibernate-mapping>
