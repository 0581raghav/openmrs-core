<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs">

	<class name="GlobalProperty" table="global_property">
		
		<id name="global_property_id" type="java.lang.Integer" column="global_property_id" length="65535">
			<generator class="native" />
		</id>

		<discriminator column="globalPropertyId" insert="false" />

		<property  name="property" type="java.lang.String" column="property" length="255" not-null="true"/>

		<property name="propertyValue" type="java.lang.String" column="property_value" not-null="false"/>

		<property name="description" type="java.lang.String" not-null="false" />
		
		<property name="defaultValue" type="java.lang.String" column="default_value" not-null="true"/>

		<many-to-one name="propertyType" column="global_property_type_id" class="GlobalPropertyType" not-null="true"/>

		<many-to-one name="defaultPropertyType" column="default_global_property_type_id" class="GlobalPropertyType" not-null="true"/>
		
		<many-to-one name="createdBy" column="user_id" class="User"/>

		<property name="dateCreated" type="java.util.Date" column="date_created" not-null="true" length="19" />

		<property name="voided" type="boolean" column="voided" length="1" not-null="true" />

		<property name="dateVoided" type="java.util.Date" column="date_voided" length="19" />

	</class>
	
</hibernate-mapping>
