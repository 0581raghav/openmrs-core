<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs">

	<class name="ConceptName" table="concept_name">

		<composite-id>
			<key-many-to-one name="concept" column="concept_id"
				class="Concept" />
			<key-property name="name" column="name"
				type="java.lang.String" length="255" />
			<key-property name="locale" column="locale"
				type="java.lang.String" length="50" />
		</composite-id>

		<property name="shortName" type="java.lang.String"
			column="short_name" length="255" />
		<property name="dateCreated" type="java.util.Date"
			column="date_created" length="19" />

		<!-- Associations -->
		<!-- derived association(s) for compound key -->
		<!-- bi-directional many-to-one association to Concept -->
		<many-to-one name="concept" class="Concept" update="false"
			insert="false">
			<column name="concept_id" />
		</many-to-one>
		<!-- end of derived association(s) -->

	    <!-- bi-directional many-to-one association to User -->
	    <many-to-one
	        name="creator"
	        class="org.openmrs.User"
	        not-null="true"
	    >
	        <column name="creator" />
	    </many-to-one>


	</class>
</hibernate-mapping>
