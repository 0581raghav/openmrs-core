<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.openmrs.Person" 
    table="person"
>

    <id
        name="personId"
        type="java.lang.Integer"
        column="person_id"
        unsaved-value="0"
    >
        <generator class="identity" />
    </id>

    <!-- Associations -->

    <!-- bi-directional many-to-one association to User -->
    <many-to-one
        name="user"
        class="org.openmrs.User"
        unique="true"
    >
        <column name="user_id" />
    </many-to-one>
    <!-- bi-directional one-to-one association to Patient -->
    <!--
    <one-to-one
        name="patient"
        class="org.openmrs.Patient"
        
        property-ref="personId"
    >
        <xcolumn name="patient_id" />
    </one-to-one>-->
    
</class>
</hibernate-mapping>
