<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.1

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="org.openmrs.DrugOrder" 
    table="drug_orders"
>

    <id
        name="orderId"
        type="java.lang.Integer"
        column="order_id"
    >
        <generator class="assigned" />
    </id>

    <property
        name="dose"
        type="int"
        column="dose"
        length="11"
    />
    <property
        name="units"
        type="java.lang.String"
        column="units"
        length="255"
    />
    <property
        name="frequency"
        type="java.lang.String"
        column="frequency"
        length="255"
    />
    <property
        name="prn"
        type="boolean"
        column="prn"
        length="1"
    />
    <property
        name="complex"
        type="boolean"
        column="complex"
        length="1"
    />
    <property
        name="quantity"
        type="int"
        column="quantity"
        length="11"
    />
    <!-- 
    <property
        name="dateCreated"
        type="java.lang.String"
        column="date_created"
        not-null="true"
        length="10"
    />
    -->

    <!-- Associations -->
  
    <!-- bi-directional one-to-one association to Order -->
    <!--
    <one-to-one
        name="order"
        class="org.openmrs.Order"
        outer-join="auto"
        constrained="true"
    />
    -->
    <!-- bi-directional many-to-one association to Drug -->
    <many-to-one
        name="drug"
        class="org.openmrs.Drug"
        not-null="true"
    >
        <column name="drug_inventory_id" />
    </many-to-one>
    <!-- bi-directional many-to-one association to User -->
    <!--
    <many-to-one
        name="user"
        class="org.openmrs.User"
        not-null="true"
    >
        <column name="creator" />
    </many-to-one>
    -->

</class>
</hibernate-mapping>
