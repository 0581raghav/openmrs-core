<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 2.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>
<!-- 
    Created by the Middlegen Hibernate plugin 2.1

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class 
    name="org.openmrs.FormField" 
    table="form_field"
>

    <id
        name="formFieldId"
        type="int"
        column="form_field_id"
        unsaved-value="0"
    >
        <generator class="identity" />
    </id>

    <property
        name="fieldNumber"
        type="int"
        column="field_number"
        length="11"
    />
    <property
        name="fieldPart"
        type="java.lang.String"
        column="field_part"
        length="5"
    />
    <property
        name="pageNumber"
        type="int"
        column="page_number"
        length="11"
    />
    <property
        name="minOccurs"
        type="int"
        column="min_occurs"
        length="11"
    />
    <property
        name="maxOccurs"
        type="int"
        column="max_occurs"
        length="11"
    />
    <property
        name="required"
        type="boolean"
        column="required"
        length="1"
    />
    <property
        name="dateChanged"
        type="java.util.Date"
        column="date_changed"
        length="19"
    />
    <property
        name="dateCreated"
        type="java.util.Date"
        column="date_created"
        length="19"
    />

    <!-- Associations -->
  
    <!-- bi-directional many-to-one association to Form -->
    <many-to-one
        name="form"
        class="org.openmrs.Form"
        not-null="true"
    >
        <column name="form_id" />
    </many-to-one>
    <!-- bi-directional one-to-many association to FormField -->
    <set
        name="formFields"
        lazy="true"
        inverse="true"
		cascade="none"
    >
        <key>
            <column name="parent_form_field" />
        </key>
        <one-to-many 
            class="org.openmrs.FormField"
        />
    </set>
    <!-- bi-directional many-to-one association to FormField -->
    <many-to-one
        name="formField"
        class="org.openmrs.FormField"
        not-null="true"
    >
        <column name="parent_form_field" />
    </many-to-one>
    <!-- bi-directional many-to-one association to User -->
    <many-to-one
        name="changedBy"
        class="org.openmrs.User"
        not-null="true"
    >
        <column name="changed_by" />
    </many-to-one>
    <!-- bi-directional many-to-one association to User -->
    <many-to-one
        name="creator"
        class="org.openmrs.User"
        not-null="true"
    >
        <column name="creator" />
    </many-to-one>
    <!-- bi-directional many-to-one association to Field -->
    <many-to-one
        name="field"
        class="org.openmrs.Field"
        not-null="true"
    >
        <column name="field_id" />
    </many-to-one>

</class>
</hibernate-mapping>
