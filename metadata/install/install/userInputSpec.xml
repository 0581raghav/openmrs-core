<userInput>
	<panel order="0">
		<field type="staticText" align="left"
			txt="Before Installation can continue, 
			OpenMRS needs the following information about your Tomcat installation."
			id="tomcat.comment" />
		<!-- 
			<field type="text" variable="Tomcat_Install_Directory">
			<spec txt="Tomcat Install Directory:" id="tomcat.dir"
			size="36"
			set="C:\Program Files\Apache Software Foundation\Tomcat 5.5" />
			
			</field>-->

		<field type="search" variable="Tomcat_Install_Directory">
			<description align="left"
				txt="The Directory where Tomcat is installed" id="tomcat.dir" />
			<spec txt="Path to Tomcat Install:" filename="Tomcat 5.5"
				checkfilename="bin/tomcat5.exe" type="file" result="directory">
				<choice value="/usr/local/java/tomcat5" os="unix" />
				<choice value="/opt/java/tomcat5" os="unix" />
				<choice
					value="C:\Program Files\Apache Software Foundation\Tomcat 5.5"
					os="windows" />
				<choice value="C:\Tomcat 5.5" os="windows" />
			</spec>
		</field>



		<field type="text" variable="Tomcat_Port">
			<spec txt="Tomcat Port:" id="tomcat.port" size="10"
				set="8080" />
		</field>
		<field type="text" variable="Tomcat_Admin_User">
			<spec txt="Tomcat Username:" id="input.proxy" size="12"
				set="admin" />
		</field>
		<field type="text" variable="Tomcat_Admin_Password">
			<spec txt="Tomcat Username Password:" id="input.port"
				size="12" set="" />
		</field>


		<!--
			<field type="radio" variable="showSQL">
			<description align="left" txt="Would you like to see queries" id="description.radio" />
