<?xml version="1.0" encoding="UTF-8" ?>
<shortcuts>
	<skipIfNotSupported />
	<programGroup defaultName="OpenMRS" location="applications" />

	<shortcut 
		name="Start OpenMRS" 
		programGroup="yes" 
		desktop="no"
		applications="no" 
		startMenu="yes" 
		startup="no"
		target="$INSTALL_PATH\startTomcat.cmd" 
		workingDirectory="$INSTALL_PATH"
		commandLine="" 
		initialState="noShow"
		iconFile="$INSTALL_PATH\go.ico" 
		iconIndex="0" type="Application"
		encoding="UTF-8" 
		description="Start OpenMRS running on Apache Tomcat">
		<createForPack name="OpenMRS" />
	</shortcut>

	<shortcut 
		name="Stop OpenMRS" 
		programGroup="yes" 
		desktop="no"
		applications="no" 
		startMenu="yes" 
		startup="no"
		target="$INSTALL_PATH\stopTomcat.cmd" 
		workingDirectory="$INSTALL_PATH"
		commandLine="" 
		initialState="noShow"
		iconFile="$INSTALL_PATH\stop.ico" 
		iconIndex="0" type="Application"
		encoding="UTF-8" 
		description="Stop OpenMRS running on Apache Tomcat">
		<createForPack name="OpenMRS" />
	</shortcut>


	<shortcut 
		name="Uninstall" 
		programGroup="yes" 
		desktop="no"
		applications="no" 
		startMenu="yes" 
		startup="no"
		target="$INSTALL_PATH\uninstall.cmd" 
		workingDirectory="$INSTALL_PATH"
		commandLine="" 
		initialState="noShow"
		iconFile="$INSTALL_PATH\remove.ico" 
		iconIndex="0" type="Application"
		encoding="UTF-8" 
		description="Uninstall">
		<createForPack name="OpenMRS" />
	</shortcut>


 
	<shortcut 
		name="Documentation" 
		programGroup="yes" 
		desktop="yes"
		applications="no" 
		startMenu="yes" 
		startup="no" 
		target="acroread"
		workingDirectory=""
		initialState="noShow"
		commandLine="start http://openmrs.org/wiki/Documentation"
		iconFile="$INSTALL_PATH\OpenMRS.ico" 
		iconIndex="0"
		url="http://openmrs.org/wiki/Documentation" 
		type="Application"
		encoding="UTF-8"
		description="OpenMRS Wiki user documentation">
		<createForPack name="Documentation" />
	</shortcut>

</shortcuts>
