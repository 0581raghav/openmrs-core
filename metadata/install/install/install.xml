<?xml version="1.0" encoding="UTF-8" ?>
<installation version="1.0">
	<native type="izpack" name="ShellLink.dll" />
	<info>
		<appname>OpenMRS</appname>
		<appversion>1.1</appversion>
		<authors>
			<author name="Christian Allen"
				email="christian@openmrs.org" />
			<author name="Paul Biondich" email="paul@openmrs.org" />
			<author name="Hamish Fraser" email="hamish@openmrs.org" />
			<author name="Darius Jazayeri" email="darius@openmrs.org" />
			<author name="Burke Mamlin" email="burke@openmrs.org" />
			<author name="Justin Miranda" email="justin@openmrs.org" />
			<author name="Ben Wolfe" email="ben@openmrs.org" />
		</authors>
		<url>http://www.openmrs.org</url>
		<javaversion>1.5</javaversion>
	</info>

	<guiprefs height="600" resizable="yes" width="800">
		<laf name="metouia">
			<os family="unix" />
		</laf>
		<laf name="looks">
			<os family="windows" />
			<param name="variant" value="plasticXP" />
			<!--			
				<param name="variant" value="plastic3D" />
				<param name="variant" value="plastic" />
				<param name="variant" value="extwin" />
			-->
		</laf>

	</guiprefs>

	<locale>
		<langpack iso3="eng" />
		<!--		<langpack iso3="jpn" />-->
	</locale>

	<resources>
		<res id="HTMLInfoPanel.info" src="install/install-readme.html" />
		<res id="HTMLLicencePanel.licence" src="install/License.html" />
		<res id="Installer.image" src="install/300px-Openmrs-logo.gif" />
		<res id="userInputSpec.xml" src="install/userInputSpec.xml" />
		<res id="shortcutSpec.xml" src="install/shortcutSpec.xml" />
		<res id="ProcessPanel.Spec.xml" src="target/process.xml" />

	</resources>

	<panels>
		<panel classname="HelloPanel" />
		<panel classname="HTMLInfoPanel" />
		<panel classname="HTMLLicencePanel" />
		<panel classname="PacksPanel" />
		<panel classname="UserInputPanel" />
		<panel classname="TargetPanel" />
		<panel classname="ShortcutPanel" os="Windows" />
		<panel classname="InstallPanel" />
		<panel classname="ProcessPanel" />
		<panel classname="SimpleFinishPanel" />
	</panels>

	<packs>

		<!-- 
		<pack name="Mysql" required="yes">
			<description>Mysql Install Files</description>
			<fileset dir="" targetdir="$INSTALL_PATH">
				<include name="install/mysql/**/*.*" />
			</fileset>
			<parsable targetfile="$INSTALL_PATH/install.cmd"
			type="plain" os="windows" />
			<executable targetfile="$INSTALL_PATH/install.sh" type="bin"
			stage="never" os="unix" />
			</pack>
		-->


		<!-- 
			<pack name="Tomcat" required="yes">
			<description>Tomcat Install Files</description>
			<fileset dir="" targetdir="$INSTALL_PATH">
				<include name="install/tomcat/**/*.*" />
			</fileset>
			
			<parsable targetfile="$INSTALL_PATH/uninstall.bat"
			type="plain" os="windows" />
			<parsable targetfile="$INSTALL_PATH/Cell-Life.desktop"
			type="plain" os="unix" />
			
			<executable targetfile="$INSTALL_PATH/go.sh" type="bin"
			stage="never" os="unix" />
			
			</pack>
		-->

		<pack name="OpenMRS" required="yes">
			<description>Open MRS Web Archive</description>
			<fileset dir="OPENMRS.BIN" targetdir="$INSTALL_PATH">
				<include name="**/*.war" />
				<!--<include name="**/*.jar" />-->
			</fileset>

			<fileset dir="install" targetdir="$INSTALL_PATH">
				<include name="**/*.cmd" />
				<include name="*.ico" />
			</fileset>

			<parsable targetfile="$INSTALL_PATH/installDB.cmd"
				type="plain" os="windows" />
			<parsable targetfile="$INSTALL_PATH/uninstall.cmd"
				type="plain" os="windows" />
		</pack>

		<pack name="OpenMRS Database Install Scripts" required="yes">
			<description>
				Database scripts required for OpenMRS. These will be
				installed from this installer
			</description>
			<fileset dir="OPENMRS.SQL"
				targetdir="$INSTALL_PATH/model">
				<include name="**/*.sql" />
			</fileset>

			<fileset dir="OPENMRS.INSTALL.CLASS"
				targetdir="$INSTALL_PATH/bin">
				<include name="**/*.class" />
			</fileset>

			<parsable targetfile="$INSTALL_PATH/installDB.cmd"
				type="plain" os="windows" />
		</pack>



		<pack name="Source" required="no">
			<description>OpenMRS source files.</description>
			<fileset dir="OPENMRS.SOURCE.DIR"
				targetdir="$INSTALL_PATH">
				<include name="**/*.*" />
			</fileset>
		</pack>

		<pack name="Documentation" required="no">
			<description>OpenMRS Documentation.</description>
			<fileset dir="OPENMRS.DOCUMENTATION.DIR"
				targetdir="$INSTALL_PATH">
				<include name="**/*.*" />
			</fileset>
		</pack>

	</packs>

</installation>
