<?xml version="1.0" encoding="UTF-8"?>
<project name="properties">

    <!-- Environment properties -->
    <property environment="env"/>
    <property name="env.COMPUTERNAME" value="${env.HOSTNAME}"/>
    <property name="tomcat.home" value="${env.CATALINA_HOME}"/>

    <!-- Load user overrides -->
    <property file="${user.home}/.${ant.project.name}-build.properties"/>
    <property file="${user.home}/.build.properties"/>

	<!-- Base definitions -->
	<property file="build.properties" />
	
    <!-- Library versions and JARs -->
    <property name="lib.dir" location="lib" />
    <property file="${lib.dir}/lib.properties" />

	<!-- Properties for running unit tests with tomcat -->
    <property name="tomcat.server" value="localhost" />
	<property name="tomcat.port" value="8080" />
    <property name="tomcat.manager.url" value="http://${tomcat.server}:${tomcat.port}/manager" />
    <property name="tomcat.username" value="test" />
    <property name="tomcat.password" value="test" />
    
    <!-- Documentation settings -->
    <property name="doc.title" value="${ant.project.name} API" />
    <property name="doc.bottom" value="&lt;em&gt;&lt;small&gt;Generated ${timestamp}. NOTE - these libraries are in active development and subject to change&lt;/small&gt;&lt;/em&gt;" />
    <property name="doc.header" value="&lt;a href=&quot;http://www.openmrs.org&quot; target=_top&gt;&lt;img src=&quot;./openmrs-logo-small.gif&quot; border=0/&gt;&lt;/a&gt;" />
    <property name="doc.footer" value="&lt;a href=&quot;http://www.openmrs.org&quot; target=_top&gt;${ant.project.name}&lt;/a&gt;" />

    <!-- Defaults for database connection -->
    <property name="database.dir" value="${mysql.dir}" />
    <property name="database.type" value="mysql" />
    <property name="database.name" value="openmrs" />
    <property name="database.business.name" value="${database.name}" />
    <property name="database.host" value="localhost:3306" />
    
    <property name="database.username" value="test" />
	<property name="database.password" value="test" />
    <property name="database.driver_class" value="com.mysql.jdbc.Driver" />
    <property name="database.connection.url" 
        value="jdbc:${database.type}://${database.host}/${database.name}?autoReconnect=true" />
    <property name="hibernate.lazy" value="true" />
    <property name="hibernate.show_sql" value="true" />
    <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
	<property name="pool.max_size" value="10" />
	<property name="pool.min_size" value="1" />
	<property name="pool.timeout" value="100" />
	<property name="pool.max_statements" value="100" />
	<property name="pool.idle_test_period" value="300" />
	<property name="pool.acquire_increment" value="2" />

	<!-- Unused cache properties (migrated to c3p0
    <property name="dbcp.min_size" value="5" />
    <property name="dbcp.max_size" value="20" />
    <property name="dbcp.timeout" value="1" />
    <property name="dbcp.max_statements" value="50" />
    -->
    
    <!--  infopath properties -->
    <!--  should go into formentry module -->
    <property name="infopath.server.url" value="http://${tomcat.server}:${tomcat.port}/"/>
    <!-- use:
    	infopath.publish.url+form.getUri() inserted into xsn document as publishUrl 
    	same url used for downloading xsn -->
    <property name="infopath.publish.url" value="${infopath.server.url}/formentry/forms/" /> 
    <property name="infopath.taskpane.caption" value="Welcome!"/>
    <property name="infopath.taskpane.initial.url" value="${infopath.server.url}/${webapp.name}/taskPane.htm"/>
    <property name="infopath.submit.url" value="${infopath.server.url}/${webapp.name}/formUpload"/>
    <property name="infopath.schema.filename" value="FormEntry.xsd"/>
    <property name="infopath.output.dir" value="C:/"/> <!--  filesystem directory uploaded xsn is saved to -->
    
    <!-- Customization properties -->
    <property name="custom.template.dir" value="web/WEB-INF/template" />
    <property name="custom.style.css.file" value="web/style.css" />
    <property name="custom.index.jsp.file" value="web/WEB-INF/view/index.jsp" />
    <property name="custom.images.dir" value="web/images" />
    
    <!-- =================================================================== -->
    <!-- Classpaths                                                          -->
    <!-- =================================================================== -->
   
    <!-- Hibernate -->
    <path id="hibernate.classpath">
    	<fileset dir="${cglib.dir}" includes="*.jar" />
		<fileset dir="${commons-beanutils.dir}" includes="*.jar" />
		<fileset dir="${commons-collections.dir}" includes="*.jar" />
        <fileset dir="${commons-lang.dir}" includes="*.jar" />
        <fileset dir="${commons-logging.dir}" includes="*.jar" />
		<fileset dir="${database.dir}" includes="*.jar" />
		<fileset dir="${dom4j.dir}" includes="*.jar" />
        <fileset dir="${hibernate.dir}" includes="*.jar" />
        <fileset dir="${jta.dir}" includes="*.jar" />
        <pathelement location="${build.dir}/api" />
    </path>
    
    <!-- API -->
    <path id="api.compile.classpath">
		<fileset dir="${commons-io.dir}" includes="*.jar" />
		<fileset dir="${commons-logging.dir}" includes="*.jar" />
		<fileset dir="${hibernate.dir}" includes="*.jar" />
		<fileset dir="${ibatis.dir}" includes="*.jar" />
		<fileset dir="${log4j.dir}" includes="*.jar" />
		<fileset dir="${mail.dir}" includes="*.jar" />
		<fileset dir="${spring.dir}" includes="*.jar" />
		<fileset dir="${velocity.dir}" includes="*.jar" />
		<fileset dir="${junit.dir}" includes="*.jar" />
    </path>
    <path id="api.test.classpath">
        <path refid="api.compile.classpath"/>
		<fileset dir="${test.dir}/api" includes="**/*.java" />
		<fileset dir="${junit.dir}" includes="*.jar" />
    </path>
        
    <!-- Web -->
    <path id="web.compile.classpath">
		<pathelement location="${dist.dir}/openmrs-api-${openmrs.version}.jar" />
		<fileset dir="${tomcat.dir}" includes="*.jar" />
		<fileset dir="${dwr.dir}" includes="*.jar" />
		<fileset dir="${commons-io.dir}" includes="*.jar" />
		<fileset dir="${commons-logging.dir}" includes="*.jar" />
		<fileset dir="${commons-lang.dir}" includes="*.jar" />
		<fileset dir="${hibernate.dir}" includes="*.jar" />
		<fileset dir="${jstl.dir}" includes="*.jar" />
		<fileset dir="${spring.dir}" includes="*.jar" />
		<fileset dir="${velocity.dir}" includes="*.jar" />
    </path>

</project>
