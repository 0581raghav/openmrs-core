<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.openmrs">

	<class name="DrugIngredient" table="drug_ingredient">

		<composite-id>
			<key-many-to-one name="drug" column="drug_id"
				class="Drug" />
			<key-many-to-one name="ingredient" column="ingredient_id"
				class="Concept" />
		</composite-id>

		<property name="uuid" type="java.lang.String"
			column="uuid" length="38" unique="true" />

		<property name="quantity" type="java.lang.Double" />

		<property name="units" type="java.lang.String" length="50" />

		<!-- Associations -->
		<!-- derived association(s) for compound key -->
		<!-- bi-directional many-to-one association to Drug -->
		<many-to-one name="drug" class="Drug" update="false" insert="false" column="drug_id" not-null="true"/>	
		
		<!-- bi-directional many-to-one association to Concept -->
		<many-to-one name="ingredient" class="Concept"
			update="false" insert="false">
			<column name="ingredient_id" />
		</many-to-one>

		<!-- end of derived association(s) -->

	</class>

</hibernate-mapping>
