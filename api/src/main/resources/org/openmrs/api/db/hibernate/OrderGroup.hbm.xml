<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs">

	<class name="OrderGroup" table="order_group">

		<id name="orderGroupId" type="int" column="order_group_id" unsaved-value="0">
			<generator class="native" />
		</id>
		
		<discriminator column="order_group_id" insert="false" />

		<many-to-one name="orderSet" class="org.openmrs.OrderSet">
        	<column name="order_set_id" />
   		</many-to-one>
		
		<many-to-one name="patient" class="org.openmrs.Patient" not-null="true">
        	<column name="patient_id" />
   		</many-to-one>
   		
   		<many-to-one name="creator" class="org.openmrs.User" not-null="true">
        	<column name="creator" />
   		</many-to-one>
		<property name="dateCreated" type="java.util.Date" column="date_created" length="19" not-null="true"/>
		
		<property name="voided" type="java.lang.Boolean" column="voided" length="1" />	
		<many-to-one name="voidedBy" class="org.openmrs.User">
        	<column name="voided_by" />
   		</many-to-one>
   		<property name="dateVoided" type="java.util.Date" column="date_voided" length="19"/>
		<property name="voidReason" type="java.lang.String" column="void_reason" length="255" />	
			
   		<property name="uuid" type="java.lang.String" column="uuid" length="38" unique="true" not-null="true" />
		
		<set name="orders" lazy="true" cascade="delete" table="order">
			<key column="order_group" not-null="false" />
			<one-to-many class="Order" />
		</set>
	
	</class>
	
</hibernate-mapping>
